# Crime Agent Configuration for GridWatch
# This file defines how the crime agent integrates with the GridWatch orchestrator

# Environment Variables
GOOGLE_GENAI_USE_VERTEXAI=0
GOOGLE_API_KEY=<API_KEY>
CRIME_AGENT_MODEL=gemini-2.5-flash
CRIME_AGENT_ENABLED=true

# Pub/Sub Configuration
CRIME_TOPIC_ID=crime-update-data
CRIME_SUBSCRIPTION_ID=trigger-crime-update-agent-sub

# Data Collection Settings
CRIME_LOOKBACK_HOURS=24
CRIME_MIN_CONFIDENCE=0.5
CRIME_INCLUDE_SOCIAL_MEDIA=true
CRIME_SEVERITY_THRESHOLD=0.0

# Source Priorities (0.0-1.0)
CRIME_SOURCE_POLICE_WEIGHT=1.0
CRIME_SOURCE_NEWS_WEIGHT=0.8
CRIME_SOURCE_SOCIAL_WEIGHT=0.5

# Deduplication Settings
CRIME_DEDUPE_DISTANCE_METERS=200
CRIME_DEDUPE_TIME_MINUTES=15

# Rate Limiting
CRIME_MAX_INCIDENTS_PER_REQUEST=50
CRIME_SEARCH_TIMEOUT_SECONDS=30
